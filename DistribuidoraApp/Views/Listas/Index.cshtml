@model IEnumerable<Negocio.entidades.Lista>

@{
    ViewBag.Title = "Lista de Precios";
}

<div class="row">
    <div class="col-md-12">
        <h2>Listas</h2>
        <hr />
        <p>
            @Html.ActionLink("Crear Nueva Lista", "Create", null, new { @class = "btn btn-outline btn-primary" })
            @Html.ActionLink("Volver al Inicio", "Index", "Home", null, new { @class = "btn btn-outline btn-warning pull-right" })
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered datatable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecargoGeneral)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecargoImporte)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fecha)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecargoGeneral)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecargoImporte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                <a href="@(Url.Action("Edit", new { id = item.ListaId }))" class="btn btn-sm btn-success" title="Editar Lissta"><i class="fas fa-edit"></i></a>
                                <a href="@(Url.Action("Delete", new { id = item.ListaId }))" class="btn btn-sm btn-danger" title="Eliminar Lista"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>




            </table>
        }
        else
        {
            <hr />
            <div class="alert alert-danger">
                <p>No existen registros.</p>
            </div>
        }

    </div>
</div>